<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            tools:background="@color/background">

            <ImageView
                android:id="@+id/item_poster_post"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                app:imageUrl="@{movie.poster_path}"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:background="@color/itemsColor"
                tools:background="@color/itemsColor">

                <TextView
                    android:id="@+id/item_poster_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dp"
                    android:ellipsize="middle"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:text="@{movie.title}"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <data>

        <variable
            name="movie"
            type="com.mustafa.movieapp.models.entity.Movie" />
    </data>


</layout>


